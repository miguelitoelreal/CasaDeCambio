@{
    ViewData["Title"] = "Resultado del Cambio";
}

<h1>Resultado del Cambio</h1>

<p><strong>Cantidad Enviada:</strong> @ViewBag.Cantidad @ViewBag.Origen</p>
<p><strong>Cantidad Recibida:</strong> @ViewBag.Resultado @ViewBag.Destino</p>

<form asp-action="FormularioBoleta" method="post">
    <input type="hidden" name="cantidad" value="@ViewBag.Cantidad" />
    <input type="hidden" name="resultado" value="@ViewBag.Resultado" />
    <input type="hidden" name="origen" value="@ViewBag.Origen" />
    <input type="hidden" name="destino" value="@ViewBag.Destino" />
    <button type="submit" class="btn btn-success">Continuar para Generar Boleta</button>
</form>