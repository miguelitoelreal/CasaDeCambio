@{
    ViewData["Title"] = "Casa de Cambio";
}

<h1>Casa de Cambio</h1>

<form asp-action="CalcularCambio" method="post">
    <div class="form-group">
        <label for="cantidad">Cantidad:</label>
        <input type="number" id="cantidad" name="cantidad" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="origen">Moneda Origen:</label>
        <select id="origen" name="origen" class="form-control">
            <option value="BRL">Real Brasileño (BRL)</option>
            <option value="USD">Dólar Estadounidense (USD)</option>
            <option value="PEN">Sol Peruano (PEN)</option>
        </select>
    </div>

    <div class="form-group">
        <label for="destino">Moneda Destino:</label>
        <select id="destino" name="destino" class="form-control">
            <option value="PEN">Sol Peruano (PEN)</option>
            <option value="USD">Dólar Estadounidense (USD)</option>
            <option value="BRL">Real Brasileño (BRL)</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Hacer Cambio</button>
</form>